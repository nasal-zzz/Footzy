<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

          <script>

 function updateStatus(orderId, newStatus) {
    fetch('/admin/update-order-status', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        orderId: orderId,
        newStatus: newStatus
      })
    })
    .then(response => response.json())
    .then(data => {
      if (data.message === 'Order status updated successfully') {
        // Use SweetAlert to show success message
        Swal.fire({
          icon: 'success',
          title: 'Success!',
          text: 'Order status updated successfully.',
          confirmButtonText: 'OK'
        }).then(() => {
          location.reload();
        });
      } else {
        // Use SweetAlert to show error message
        Swal.fire({
          icon: 'error',
          title: 'Error!',
          text: 'Error: ' + data.message,
          confirmButtonText: 'Try Again'
        });
      }
    })
    .catch(error => {
      // Use SweetAlert for error handling
      Swal.fire({
        icon: 'error',
        title: 'Error!',
        text: 'Error updating status. Please try again later.',
        confirmButtonText: 'OK'
      });
      console.error(error);
    });
  }
            
            </script>
        
