<%-include("../../views/partials/profile/header")%>
<style>
    :root {
        --primary-orange: #FF6B00;
    }

    .navbar-brand {
        color: var(--primary-orange) !important;
        font-weight: bold;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(255, 107, 0, 0.05);
    }

    .product-img {
        width: 80px;
        height: 80px;
        object-fit: cover;
    }

    .profile-nav .nav-link {
        color: #333;
        padding: 1rem 1.5rem;
    }

    .profile-nav .nav-link.active {
        color: var(--primary-orange);
        border-bottom: 2px solid var(--primary-orange);
    }

    .btn-orange {
        background-color: var(--primary-orange);
        color: white;
    }

    .btn-orange:hover {
        background-color: #e65c00;
        color: white;
    }

    .table > :not(caption) > * > * {
        padding: 1rem 0.5rem;
    }

    .status-Pending {
        color: #ffc107;
        background-color: #ffc10720;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }
    .status-Processing {
        color: #0D6EFD;
        background-color: #ffc10720;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }
    .status-Shipped {
        color: #6610F2;
        background-color: #ffc10720;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }
    .status-Delivered {
        color: #198754;
        background-color: #ffc10720;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }
    .status-Cancel-Requested {
        color: #FD7E14;
        background-color: #ffc10720;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }
    .status-Cancelled {
        color: #DC3545;
        background-color: #ffc10720;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }
    .status-Return-Requested {
        color: #FF8800;
        background-color: #ffc10720;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }
    .status-Returned {
        color: #6C757D;
        background-color: #ffc10720;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }

    .table-responsive {
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

    .table thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
    }

    .order-actions .btn {
        margin: 0 0.2rem;
    }

    .search-section {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 2rem;
    }

    .pagination .page-item a {
    color: white;
    background-color: orange;
    border: 1px solid orange;
}

.pagination .page-item.active a {
    background-color: white;
    color: orange;  /* This will change the number color to orange */
    border: 1px solid orange;
    font-weight: bold;  /* Make the active page bolder */
}

.pagination .page-item a:hover {
    background-color: #ff7f00;
    color: white;
    border: 1px solid #ff7f00;
}

.pagination .page-item.disabled a {
    background-color: #ffcc80;
    color: white;
    border: 1px solid #ffcc80;
    pointer-events: none;
}




  /* Flexbox container for centering */
  .full-screen-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #fff8f3 0%, #fff 100%);
        }

        .content-box {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(255, 165, 0, 0.1);
            max-width: 500px;
            padding: 2rem;
            text-align: center;
            position: relative;
        }

        /* Decorative circle */
        .circle {
            width: 80px;
            height: 80px;
            background: #fff3e6;
            border-radius: 50%;
            position: absolute;
            top: -40px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1;
        }

        /* Empty box image */
        .empty-box {
            width: 100px;
            height: 100px;
            object-fit: cover;
            z-index: 0;
        }

        #message-heading {
            color: #ff8c00;
            font-weight: 700;
            margin-top: 50px;
            font-size: 1.8rem;
        }

        #message-paragraph {
            color: #666;
            font-size: 1.1rem;
            margin-bottom: 30px;
        }

        .btnz {
            background: linear-gradient(45deg, #ff8c00, #ffa500);
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .btnz:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 140, 0, 0.3);
        }

</style>

<% if(orders.length<=0){ %>

    <div class="full-screen-container">
        <div class="content-box">
            <!-- Decorative circle -->
            <div class="circle">
            <img src="/img/empty-order.png" alt="Empty box illustration" class="empty-box" />
        </div>
            <!-- Content -->
            <h3 id="message-heading">No Orders Yet</h3>
            <p id="message-paragraph">     You haven't placed any orders yet.<br>
                Start shopping to see your order history here!</p>

            <!-- Styled Button -->
           <a href="/shop"><button class="btnz">Explore Products</button></a> 
        </div>
    </div>


    <% }else{ %>


    <!-- Orders Section -->
    <div class="container my-5">
        <!-- Search and Filter Section -->
        <div class="search-section">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h3 class="mb-md-0">My Orders</h3>
                </div>
                <div class="col-md-6">
                    <div class="d-flex gap-3">
                        <select class="form-select">
                            <option>All Orders</option>
                            <option>Processing</option>
                            <option>Shipped</option>
                            <option>Delivered</option>
                        </select>
                        <input type="text" class="form-control" placeholder="Search orders...">
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Table -->
        <div class="table-responsive">
            <table class="table  align-middle mb-0">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Products</th>
                        <th>Order Date</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < orders.length; i++) { %>
                        <tr class="order-group">
                            <!-- Order ID (spans multiple rows if multiple products) -->
                            <td rowspan="<%= orders[i].orderedItems.length %>">
                                #<%= orders[i].orderId %>
                            </td>
                
                            <!-- First product of the order -->
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="/uploads/product-images/<%= orders[i].orderedItems[0].productImage %>" alt="Product" class="product-img me-3">
                                    <div>
                                        <h6 class="mb-0"><%= orders[i].orderedItems[0].productName %></h6>
                                        <small class="text-muted">Size: <%= orders[i].orderedItems[0].size %> | Qty: <%= orders[i].orderedItems[0].quantity %> |  Price: <%= orders[i].orderedItems[0].price %> </small>
                                    </div>
                                </div>
                            </td>
                            <td rowspan="<%= orders[i].orderedItems.length %>">
                                <%= orders[i].invoiceDate.toDateString() %>
                            </td>
                            <td rowspan="<%= orders[i].orderedItems.length %>">
                                â‚¹ <%= orders[i].finalAmount %>
                            </td>
                            <td rowspan="<%= orders[i].orderedItems.length %>">
                                <span class="status-<%= orders[i].orderStatus%>">
                                    <%= orders[i].orderStatus %>
                                </span>
                            </td>
                            <td rowspan="<%= orders[i].orderedItems.length %>">
                               <a href="/orderDetails?orderId=<%=orders[i].orderId %>"><button class="btn btn-sm btn-outline-secondary">View Details</button></a> 
                            </td>
                        </tr>
                
                        <!-- Remaining products of the same order -->
                        <% for (let j = 1; j < orders[i].orderedItems.length; j++) { %>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="/uploads/product-images/<%= orders[i].orderedItems[j].productImage %>" alt="Product" class="product-img me-3">
                                    <div>
                                        <h6 class="mb-0"><%=  orders[i].orderedItems[j].productName %></h6>
                                        <small class="text-muted">Size: <%= orders[i].orderedItems[j].size %> | Qty: <%= orders[i].orderedItems[j].quantity %> |  Price: <%= orders[i].orderedItems[j].price %> </small>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                    <% } %>
                </tbody>
                
            </table>
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
        
                <% if (totalPages > 1) { %>
                    
                    <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link text-danger bg-warning" href="?page=<%= currentPage - 1 %>">Previous</a>
                        </li>
                    <% } %>
        
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                        </li>
                    <% } %>
        
                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link bg-warning" href="?page=<%= currentPage + 1 %>">Next</a>
                        </li>
                    <% } %>
        
                <% } %>
            </ul>
        </nav>
        

    </div>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>