<%-include("../../views/partials/profile/header")%>



 <style>
        :root {
            --primary-orange: #FF6B00;
        }

        .navbar-brand {
            color: var(--primary-orange) !important;
            font-weight: bold;
        }

        .profile-nav .nav-link {
            color: #333;
            padding: 1rem 1.5rem;
        }

        .profile-nav .nav-link.active {
            color: var(--primary-orange);
            border-bottom: 2px solid var(--primary-orange);
        }

        .balance-card {
            background: linear-gradient(135deg, var(--primary-orange), #ff8533);
            color: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 10px 20px rgba(255, 107, 0, 0.2);
        }

        .transaction-item {
            border-left: 4px solid transparent;
            transition: all 0.3s ease;
        }

        .transaction-item:hover {
            background-color: #f8f9fa;
            border-left-color: var(--primary-orange);
        }   

        .credit {
            color: #198754;
        }

        .debit {
            color: #dc3545;
        }

        .payment-method-card {
            border: 1px solid #dee2e6;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .payment-method-card:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .payment-method-card.default {
            border: 2px solid var(--primary-orange);
        }

        .btn-orange {
            background-color: var(--primary-orange);
            color: white;
        }

        .btn-orange:hover {
            background-color: #e65c00;
            color: white;
        }

        .transaction-badge {
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.875rem;
        }

        .badge-success {
            background-color: #19875420;
            color: #198754;
        }

        .badge-danger {
            background-color: #dc354520;
            color: #dc3545;
        }
    </style>
    
    <div class="row ms-3" style="margin-left: 100px;margin-top: 50px;">
        <div class="col">
            <h1 class="fw-bold mb-1">My Wallet</h1>
        </div>
    </div>
    
    

    <!-- Wallet Content -->
    <div class="container my-5">
        <div class="row">
            <!-- Balance Section -->
            <div class="col-md-4 mb-4">
                <div class="balance-card">
                    <h5 class="mb-3">Available Balance</h5>
                    <h2 class="mb-4">$1,250.00</h2>
                    <div class="d-grid gap-2">
                        <button class="btn btn-light">Add Money</button>
                        <button class="btn btn-outline-light">Withdraw</button>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card mt-4" >
                    <div class="card-body">
                        <h5 class="card-title">Quick Actions</h5>
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-right"></i> Transfer to Bank
                            </button>
                            <button class="btn btn-outline-secondary">
                                <i class="bi bi-gift"></i> Redeem Voucher
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Transaction History -->
            <div class="col-md-8">
                <div class="container">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Transaction History</h5>
                        <select class="form-select" style="width: auto;">
                            <option>All Transactions</option>
                            <option>Credits</option>
                            <option>Debits</option>
                        </select>
                    </div>
                    <div class="card-body p-0">
                        <!-- Transaction Items -->
                        <div class="transaction-item p-3 border-bottom">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Nike Air Max Purchase</h6>
                                    <small class="text-muted">10 Nov 2024, 09:30 AM</small>
                                </div>
                                <div class="text-end">
                                    <div class="debit">-$199.99</div>
                                    <span class="transaction-badge badge-danger">Debit</span>
                                </div>
                            </div>
                        </div>

                        <div class="transaction-item p-3 border-bottom">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Wallet Recharge</h6>
                                    <small class="text-muted">9 Nov 2024, 02:15 PM</small>
                                </div>
                                <div class="text-end">
                                    <div class="credit">+$500.00</div>
                                    <span class="transaction-badge badge-success">Credit</span>
                                </div>
                            </div>
                        </div>

                        <div class="transaction-item p-3 border-bottom">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Refund - Order #12342</h6>
                                    <small class="text-muted">8 Nov 2024, 11:45 AM</small>
                                </div>
                                <div class="text-end">
                                    <div class="credit">+$159.99</div>
                                    <span class="transaction-badge badge-success">Credit</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Methods -->
                <h5 class="mt-4 mb-3">Payment Methods</h5>
                <div class="row">
                    <!-- Default Card -->
                    <div class="col-md-6 mb-3">
                        <div class="payment-method-card p-3 default">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0">•••• •••• •••• 4242</h6>
                                <span class="badge bg-success">Default</span>
                            </div>
                            <div class="text-muted small">Expires 12/25</div>
                            <div class="mt-2">
                                <button class="btn btn-sm btn-outline-secondary">Edit</button>
                                <button class="btn btn-sm btn-outline-danger">Remove</button>
                            </div>
                        </div>
                    </div>

                    <!-- Secondary Card -->
                    <div class="col-md-6 mb-3">
                        <div class="payment-method-card p-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0">•••• •••• •••• 8888</h6>
                            </div>
                            <div class="text-muted small">Expires 09/24</div>
                            <div class="mt-2">
                                <button class="btn btn-sm btn-outline-secondary">Set Default</button>
                                <button class="btn btn-sm btn-outline-danger">Remove</button>
                            </div>
                        </div>
                    </div>

                    <!-- Add New Card -->
                    <div class="col-md-6 mb-3">
                        <div class="payment-method-card p-3 d-flex align-items-center justify-content-center" style="height: 100%;">
                            <button class="btn btn-orange">
                                <i class="bi bi-plus-lg"></i> Add New Card
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
