<%- include("../../views/partials/user/header") %>

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css" rel="stylesheet">

<style>
    :root {
        --primary-color: #FF6B00;
        --primary-hover: #FF8533;
    }
    .navbar-brand img {
        height: 40px;
    }
    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }
    .btn-primary:hover {
        background-color: var(--primary-hover);
        border-color: var(--primary-hover);
    }
    .btn-outline-primary {
        color: var(--primary-color);
        border-color: var(--primary-color);
    }
    .btn-outline-primary:hover {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }
    .text-primary {
        color: var(--primary-color) !important;
    }
    .product-img {
        max-width: 200px;
        height: 100px;
        object-fit: cover;
    }
    .empty-wishlist-icon {
        font-size: 4rem;
        color: #dee2e6;
    }
</style>

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Wishlist</h1>
                <nav class="d-flex align-items-center">
                    <a href="/">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="#">Wishlist</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->

<% if (items.length > 0) { %>

<div class="container py-5">
    <div class="row mb-4">
        <div class="col">
            <h1 class="fw-bold mb-2">Wishlist</h1>
            <p class="text-muted"><%= items.length %> items in your wishlist</p>
        </div>
    </div>

    <div class="row g-4">
        <% for (let i = 0; i < items.length; i++) { %>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <img src="/uploads/product-images/<%= items[i].productImage %>" alt="<%= items[i].productName %>" class="product-img rounded">
                    </div>
                    <h3 class="h5 fw-bold mb-2 text-center"><%= items[i].productName %></h3>
                    <p class="text-muted mb-2 text-center">Size: <%= items[i].size %></p>
                    <h4 class="text-primary fw-bold text-center">â‚¹<%= items[i].price %>.00</h4>
                    <div class="d-grid gap-2 mt-3">
                        <button class="btn btn-primary" onclick="addToCart('<%= items[i].productId %>', '<%= items[i].size %>', '<%= items[i].quantity %>')">
                            <i class="bi bi-cart-plus me-2"></i>Add to Cart
                        </button>
                        <button class="btn btn-outline-danger" onclick="removeFromWishlist('<%= items[i]._id %>')">
                            <i class="bi bi-trash me-2"></i>Remove
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>

<% } else { %>

<div class="row">
    <div class="col-12 text-center py-5">
        <i class="bi bi-heart empty-wishlist-icon mb-3 d-block"></i>
        <h3 class="h4 fw-bold mb-2">Your wishlist is empty</h3>
        <p class="text-muted mb-4">Browse our collection and add your favorite items</p>
        <a href="/shop"><button class="btn btn-primary px-4 py-2">Continue Shopping</button></a>
    </div>
</div>

<% } %>

<!-- Add SweetAlert2 CSS and JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function addToCart(productId, size, qty) {
        // Send POST request using fetch
        fetch('/wishListToCart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                productId: productId,
                size: size,
                qty: qty,
            }),
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Show success alert
                Swal.fire({
                    icon: 'success',
                    title: 'Added to Cart',
                    text: data.message,
                    timer: 2000,
                    showConfirmButton: false,
                }).then(() => {
                    // Reload the page to update the cart UI
                    window.location.reload();
                });
            } else {
                // Show error alert with the message from the server
                Swal.fire({
                    icon: 'error',
                    title: 'Failed to Add',
                    text: data.message,
                });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'An error occurred. Please try again later.',
            });
        });
    }

    function removeFromWishlist(itemId) {
    // Show confirmation warning first
    Swal.fire({
        title: 'Are you sure?',
        text: "Do you want to remove this item from your wishlist?",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, remove it!'
    }).then((result) => {
        if (result.isConfirmed) {
            // Proceed with DELETE request if user confirms
            fetch(`/removeWishlisttProduct?itemId=${itemId}`, {
                method: 'DELETE',
                headers:{
                    'Content-Type':'application/json',
                },
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Show success alert
                    Swal.fire({
                        icon: 'success',
                        title: 'Removed from Wishlist',
                        text: data.message,
                        timer: 2000,
                        showConfirmButton: false,
                    }).then(() => {
                        // Reload the page to reflect changes
                        window.location.reload();
                    });
                } else {
                    // Show error alert
                    Swal.fire({
                        icon: 'error',
                        title: 'Failed to Remove',
                        text: data.message,
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'An error occurred. Please try again later.',
                });
            });
        }
    });
}
</script>

