        }

        .profile-nav .nav-link.active {
            color: var(--primary-orange);
            border-bottom: 2px solid var(--primary-orange);
        }

        .btn-orange {
            background-color: var(--primary-orange);
            color: white;
        }

        .btn-orange:hover {
            background-color: #e65c00;
            color: white;
        }



        body {
            font-family: Arial, sans-serif;
            background-color: #fff;
            color: #333;
            margin: 0;
            padding: 0;
